{
  "name": "add-to-gcal",
  "version": "0.0.1",
  "description": "Add event to google calendar chrome extension",
  "main": "src/background/index.js",
  "type": "module",
  "license": "ISC",
  "private": false,
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 6.0.0"
  },
  "homepage": "https://github.com/nabraham/add-to-gcal",
  "keywords": [],
  "author": "Nathan Abraham",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "npx tsc",
    "copy-assets-old": "rsync -av --exclude 'tsconfig.json' --exclude coverage --exclude 'src' --exclude 'dist' ./ dist/",
    "copy-assets": "cp -r assets dist/assets; cp manifest.json dist/manifest.json",
    "build": "npm run clean && npm run compile && npm run copy-assets && npm run pack",
    "pack": "npx webpack --mode production",
    "release": "npm run build && rm -rf dist/src && mkdir -p release && zip -r release/add-to-gcal-$npm_package_version.zip dist",
    "test-all": "npm run test && npm run lint && npm run prettier",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier": "npx prettier . --check",
    "prettier-and-fix": "npx prettier . --write"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@jest/globals": "^29.7.0",
    "@types/chrome": "^0.0.251",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
